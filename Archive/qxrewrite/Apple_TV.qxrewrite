^https?:\/\/uts-api\.itunes\.apple\.com\/uts\/(v1|v2|v3)\/favorites\/(add|remove).* url script-request-body https://raw.githubusercontent.com/VirgilClyne/iRingo/main/archive/js/Apple_TV.js
